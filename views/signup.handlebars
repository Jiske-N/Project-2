<div class="container bg-dark">
<div class="card mt-4">
  <h5 class="card-header bg-success text-white">Signup</h5>
<form class="card-body" id="signup-form">
  <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email">
    <div class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="username" class="form-control" id="username">
    <div class="form-text">Be unique! Make a username.</div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password">
  </div>
  <div class="mb-3">
  <button type="submit" class="btn btn-primary form-control">Signup!</button>
  </div>

  <a href="/login">Login instead</a>
</form>
</div>
</div>

<script src="/js/signup.js"></script>